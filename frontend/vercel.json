{
    "version": 2,
    "builds": [
      {
        "src": "vite.config.ts",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "cleanDistDir": true
        }
      }
    ],
    "routes": [
      {
        "src": "/assets/(.*)",
        "headers": {
          "Cache-Control": "public, max-age=31536000, immutable"
        }
      },
      {
        "src": "/(.*)",
        "dest": "/",
        "headers": {
          "Cache-Control": "s-maxage=0, stale-while-revalidate"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/stats/:path*",
        "destination": "/"
      }
    ]
  }